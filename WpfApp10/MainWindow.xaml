<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="760" Width="525">
    <Grid>
        <Grid.RowDefinitions>
                        <RowDefinition  />
                        <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" x:Name="tbx" TextWrapping="Wrap" Width="Auto" Grid.Column="0" Grid.ColumnSpan="3"/>
        <Button Grid.Row="1" Grid.Column="1" x:Name="download" Content="Download" BorderBrush="Black" BorderThickness="5" Click="download_Click" Width="150"  VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Button Grid.Row="1" Grid.Column="2" x:Name="GetStats" Content="GetStats" BorderBrush="Yellow" BorderThickness="5" Click="GetStats_Click" Width="150"   VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>

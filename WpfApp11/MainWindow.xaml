<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel  HorizontalAlignment="Center" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnExecute" Grid.Column="0" Click="btnExecute_Click" Content="Execute" BorderBrush="Black" BorderThickness="5"/>
                <Button x:Name="btnCancel" Grid.Column="1" Click="btnCancel_Click" Content="Cancel" BorderBrush="Black" BorderThickness="5"/>
            </Grid>
           </DockPanel>
    </Grid>
</Window>

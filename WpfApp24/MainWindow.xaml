<Window x:Class="WpfApp24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp24" 
        mc:Ignorable="d" SizeToContent="WidthAndHeight" FontSize="50" FontStyle="Italic"
        Title="MainWindow" Height="750" Width="525" Background="OrangeRed">
    <StackPanel>
        <Button Background="Red" Width="300" Height="100" Content="No Rotate" />
        <Button RenderTransformOrigin="0.5,0.5" Background="Orange" Width="300" Content="Rotate 45" Height="100">
            <Button.RenderTransform>
                <RotateTransform Angle="45"/>
            </Button.RenderTransform>
        </Button>
    </StackPanel>
</Window>

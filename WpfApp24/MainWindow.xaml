<Window x:Class="WpfApp24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp24" 
        mc:Ignorable="d" SizeToContent="WidthAndHeight" FontSize="50" FontStyle="Italic"
        Title="MainWindow" Height="750" Width="525" Background="OrangeRed">
    <StackPanel>
        <StackPanel Height="100" Background="Aqua">
            <Button Visibility="Collapsed">Collapsed Button</Button>
            <Button>Below a collapsed Button</Button>
        </StackPanel>
        <StackPanel Height="300" Background="Aqua">
            <Button Visibility="Hidden">Hidden Button</Button>
            <Button>Below a Hidden Button</Button>
        </StackPanel>
    </StackPanel>
</Window>

<Window x:Class="WpfApp46.View.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp46.View"
        mc:Ignorable="d"
        Title="EditWindow" Height="300" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding SelectedSODDt,Mode=TwoWay,
            UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="True" BorderBrush="Blue" 
                  BorderThickness="5"
                  SnapsToDevicePixels="True"  SelectedItem="{Binding SelectedSOD}"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">             
             
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Save" FontSize="30" Command="{Binding SaveCmd}"/>
            <Button Content="Cancel" FontSize="30" Command="{Binding CancelCmd}"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WpfApp32.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp32" 
        xmlns:localConverter="clr-namespace:WpfApp32.Converters"
        mc:Ignorable="d"
        Title="HelloBoundWorldSample" Height="350" Width="525">
    <Window.Resources>
        <local:NumbertoEvenOddConverter x:Key="evenOddConverter"/>
        <localConverter:NumberToBooleanConverter x:Key="numberToBooleanConverter"/>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBox Name="txtValue" />
        <WrapPanel Margin="0,10">            
            <TextBlock Text="Current value is :"/>
            <TextBlock Text="{Binding ElementName=txtValue,Path=Text,Converter={StaticResource ResourceKey=evenOddConverter}}"/>
        </WrapPanel>
        <Label Content="Is Even:"/>
        <CheckBox Content="IsEvent: " IsChecked="{Binding ElementName=txtValue,Path=Text,Converter={StaticResource ResourceKey=numberToBooleanConverter}}"/>
    </StackPanel>     
</Window>

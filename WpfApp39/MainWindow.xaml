<Window x:Class="WpfApp39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp39"
        xmlns:cmd="clr-namespace:WpfApp39.Resources"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding Command="cmd:CustomCommands.Exit" CanExecute="CommandBinding_CanExecute_3" Executed="CommandBinding_Executed_3"/>
    </Window.CommandBindings>
    <Grid>
        <Button Command="{Binding SnapShotCmd}" Width="200" Height="100" >Screen Capture</Button>                      
    </Grid>
</Window>

<Window x:Class="WpfApp25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp25"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1525">  
    <StackPanel Width="1000" Height="500" Orientation="Vertical">
        <Button Width="350" Height="100" Content="Original "/>
        <Button   Width="350" Height="100" Content="RenderTransform" >
            <Button.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="45"/>
                    <ScaleTransform ScaleX="5" ScaleY="2"/>
                    <SkewTransform AngleX="30"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </StackPanel>
</Window>
